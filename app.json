{
  "name": "Scrapper Bot",
  "description": "A Telegram bot that scrapes news from various sources and posts them to channels.",
  "keywords": ["telegram", "bot", "python", "scraper", "worker"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    },
    "CHAT_ID": {
      "description": "Main Telegram Chat ID",
      "required": true
    },
    "REDDIT_CHANNEL_ID": {
      "description": "Channel ID for Reddit news",
      "required": true
    },
    "ANIME_NEWS_CHANNEL_ID": {
      "description": "Channel ID for Anime news",
      "required": true
    },
    "WORLD_NEWS_CHANNEL_ID": {
      "description": "Channel ID for World news",
      "required": true
    },
    "ADMIN_ID": {
      "description": "Your Telegram User ID for admin commands",
      "required": true
    },
    "SUPABASE_URL": {
      "description": "URL of your Supabase project",
      "required": false
    },
    "SUPABASE_KEY": {
      "description": "Anon key for your Supabase project",
      "required": false
    },
    "DEBUG_MODE": {
      "description": "Enable debug logging",
      "value": "False",
      "required": false
    },
    "TELEGRAPH_TOKEN": {
      "description": "Telegraph API token for creating articles",
      "required": false
    },
    "HEROKU_APP_NAME": {
      "description": "Your Heroku app name (auto-detected, but can be set manually)",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
